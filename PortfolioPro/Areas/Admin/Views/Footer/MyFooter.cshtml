

@model List<PortfolioPro.Models.TbFooter>

<link href="~/Admin/vendor/simple-datatables/style.css" rel="stylesheet">

<div class="col-12">
    <div class="card recent-sales">


        <div class="card-body">
            <h5 class="card-title">
                <a asp-controller="Footer" asp-action="Edit" class="btn btn-success">Add</a>
            </h5>


            <!-- Table with stripped rows -->
            <table class="table table-borderless datatable">

                <thead>

                    <tr>
                        <th>your name</th>
                        <th>your email</th>
                        <th>subject</th>
                        <th>massage</th>
                        <th>description</th>

                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.YourName</td>
                            <td>@item.YourEmail</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>
                            <td>@item.Description</td>

                            <td>
                                <a asp-controller="Footer" asp-action="Edit" asp-route-id="@item.Id " class="btn btn-info">تعديل</a>

                                <a asp-controller="Footer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>



<script src="~/Admin/vendor/simple-datatables/simple-datatables.js"></script>









